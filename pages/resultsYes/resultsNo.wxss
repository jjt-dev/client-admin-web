/* pages/resultsNo/resultsNo.wxss */

.body{
  background: #F0EDF1;
}

.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
}

.backimg{
  width:750rpx;
  height:584rpx;
}
.backimg .background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}
.backimg .back{
  width:20rpx;
  height:35rpx;
  position: absolute;
  left: 52rpx;
  top: 67rpx;
  z-index:10;
}
/* title */
.navbar-title{
  font-size:15px;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
  position: absolute;
  z-index: 3;
  top: 67rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
/* 头像 */
.tou{
  position: absolute;
  width:190rpx;
  height:190rpx;
  border-radius:50%;
  z-index: 10;
  top: 154rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.tou .kuang{
  display: block;
  width: 100%;
  height: 100%;
}
.tou .touxiang{
  width:110rpx;
  height:100rpx;
  position: absolute;
  top: 45rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
/* 名称 */
.name,.cord{
  width:100%;
  font-size:17px;
  font-family:Microsoft YaHei;
  text-align: center;
  color:rgba(255,255,255,1);
  position: absolute;
  top: 377rpx;
  z-index: 12;
}
/* 身份证 */
.cord{
  font-size: 15;
  font-weight: normal;
  top: 480rpx;
}

/* 列表 */
.list{
  width:712rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 6rpx 0px rgba(28,44,29,0.16);
  border-radius:10rpx;
  margin: 35rpx auto 0;
}
.listLi{
  display: flex;
  height: 98rpx;
  border: 1rpx solid #D2D2D2;
  width: 712rpx;
  position: relative;
}
.listLi:last-child{
  border: none;
}
.listLi .group{
  font-size:15px;
  font-family:Microsoft YaHei;
  color:rgba(49,49,49,1);
  line-height:98rpx;
  padding-left: 26rpx;
}
.evaluation{
  position: absolute;
  right: 26rpx;
  font-size:12px;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(137,137,137,1);
  line-height:98rpx;
}

/* 星 */
.star {
  position: absolute;
  right: 120rpx;
  top: 18rpx;
  width: 31rpx;
height: 29rpx;

}
.star image{
  width:31rpx;
  height:29rpx;
  position: relative;
  margin: auto 0;
  vertical-align:middle;
}