/* components/navbar/index.wxss */

.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
}

.backimg{
  width:750rpx;
  height:458rpx;
}
.backimg .background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}
.backimg .back{
  width:20rpx;
  height:35rpx;
  position: absolute;
  left: 52rpx;
  bottom: 350rpx;
  z-index:10;
}
/* title */
.navbar-title{
  font-size:15px;
