/* pages/sign/sign.wxss */
.container1{
  padding: 0;
}
.title{
  width: 100%;
  height: 548rpx;
  position: relative;
}
.title image{
  width: 100%;
  height: 106%;
  display: block;
}
.button,.search{
  display: flex;
  position: relative;
  top: -45rpx;
  width: 670rpx;
  height: auto;
  margin: 0 auto;
}
.new{
  width:417rpx;
  height:100rpx;
  background:rgba(255,255,255,1);
  box-shadow:-1px 6px 13px 0px rgba(0,25,21,0.19);
  border-radius:10rpx;
  position: relative;
}
.new image{
  width:39rpx;
  height:44rpx;
  position: absolute;
  top: 26rpx;
  left: 137rpx;
}
.new label,.history label{
  font-size: 14px;
  font-family:Microsoft YaHei;
  font-weight:400;
  position: absolute;
  left: 191rpx;
  color: #4672E8;
  top: 30rpx;
}
.history label{
  left: 78rpx;
}
.history{
  width:220rpx;
  height:100rpx;
  background:rgba(255,255,255,1);
  box-shadow:-1px 6px 13px 0px rgba(0,25,21,0.19);
  border-radius:10rpx;
  margin-left: 22rpx;
  position: relative;
}
.history image{
  width:24rpx;
  height:25rpx;
  position: absolute;
  top: 37rpx;
  left: 35rpx;
}
/* search */
.search{
  width:661rpx;
  height:100rpx;
  background:rgba(70,114,232,1);
  box-shadow:-1px 6px 13px 0px rgba(0,25,21,0.19);
  border-radius:10px;
  margin-top: 36rpx;
}
.search image{
  width:31rpx;
  height:31rpx;
  position: absolute;
  left: 235rpx;
  top: 35rpx;
}
.search label{
  font-size: 14px;
  font-family:Microsoft YaHei;
  font-weight:400;
  position: absolute;
  color: #fff;
  top: 30rpx;
  width: 100%;
  text-align: center;
}
.bottom{
  width:350rpx;
  height:336rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.bottom-title{
  width:542rpx;
  height:153rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 30rpx;
  margin: 0 auto;
}

/* 头像 */
.tou{
  position: absolute;
  width:190rpx;
  height:190rpx;
  border-radius:50%;
  z-index: 10;
  top: 154rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.tou .kuang{
  display: block;
  width: 100%;
  height: 100%;
}
.tou .touxiang{
  width:110rpx;
  height:100rpx;
  position: absolute;
  top: 45rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 50%;
}
/* 名称 */
.name{
  width:100%;
  font-size:17px;
  font-family:Microsoft YaHei;
  text-align: center;
  color:rgba(255,255,255,1);
  position: absolute;
  top: 377rpx;
}

.user-motto{
  width: 100%;
  text-align: center;
  height: auto;
  background: unset;
  left: 0;
  right: 0;
  color: #fff;
  z-index: 10000001;
}
.user-motto::after{
  border: none;
}
.checkNet{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}